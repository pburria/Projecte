<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="horizontal"
    tools:context=".Comandes">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Qtat"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Nom Plat"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Preu"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Preu Total"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecycledComanda"
            android:layout_width="match_parent"
            android:layout_height="170dp" />
        <TextView
            android:id="@+id/txtTotalComanda"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="18dp">
        </TextView>
        <Button
            android:id="@+id/btnGardarComanda"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:backgroundTint="#00FF00"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Guardar">
        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/LinearCategories"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnCat1"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:textSize="8dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                ></Button>
            <Button
                android:id="@+id/btnCat2"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:textSize="8dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                ></Button>
            <Button
                android:id="@+id/btnCat3"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:textSize="8dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                ></Button>
            <Button
                android:id="@+id/btnCat4"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:textSize="8dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                ></Button>
            <Button
                android:id="@+id/btnCat5"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:textSize="8dp"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/black"
                ></Button>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecycledPlats"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>




</LinearLayout>